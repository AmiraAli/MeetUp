<% if current_user.isadmin %>
<div class="container">
<div class="row">
<ul class="nav nav-tabs">
  <li role="presentation"><a href="http://localhost:3000/groups">Groups</a></li>
  <li role="presentation" class="active"><a href="http://localhost:3000/events">Events</a></li>
  <li role="presentation"><a href="http://localhost:3000/interests">Interests</a></li>
  <li role="presentation"><a href="http://localhost:3000/users">Users</a></li>
</ul>
</div>
  <div class="row">
    <p id="notice"><%= notice %></p>
    <div class="col-md-offset-10 ">
      <%= link_to 'New Event', new_event_path %>
    </div>
    <div class="col-md-12">
      <h1>
        <span class="label label-default">Listing Events</span>
      </h1>
      <div class="table-responsive">
        <table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start_date</th>
      <th>End_date</th>
      <th>City</th>
      <th>Country</th>
      <th>Address</th>
      <th>User</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.startdate %></td>
        <td><%= event.enddate %></td>
        <td><%= event.city %></td>
        <td><%= event.country %></td>
        <td><%= event.address %></td>
        <td><%= event.user.username %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
      </div>
    </div>
  </div>
</div>
<%else%>
<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-danger" style="margin-top: 150px">
      <div class="panel-heading" > 
        <h3 class="panel-title">
        Error 
        </h3>
      </div>
      <div class="panel-body">
        <p>You can't access this url </p>
      </div>
    </div>
  </div>
</div>
<%end%>